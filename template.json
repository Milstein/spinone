{
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `access_key`}}",
    "secret_key": "{{user `secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "spinone {{timestamp}}"
  },
  {
    "type": "virtualbox-iso",
    "boot_command": [
      "<esc><wait>",
      "<esc><wait>",
      "<enter><wait>",
      "/install/vmlinuz<wait>",
      " auto<wait>",
      " console-setup/ask_detect=false<wait>",
      " console-setup/layoutcode=us<wait>",
      " console-setup/modelcode=pc105<wait>",
      " debian-installer=en_US<wait>",
      " fb=false<wait>",
      " initrd=/install/initrd.gz<wait>",
      " kbd-chooser/method=us<wait>",
      " keyboard-configuration/layout=USA<wait>",
      " keyboard-configuration/variant=USA<wait>",
      " locale=en_US<wait>",
      " netcfg/get_hostname=ubuntu-1404<wait>",
      " netcfg/get_domain=vagrantup.com<wait>",
      " noapic<wait>",
      " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
      " -- <wait>",
      "<enter><wait>"
    ],
    "boot_wait": "10s",
    "disk_size": "{{user `disk_size`}}",
    "guest_os_type": "Ubuntu_64",
    "http_directory": "vendor/http",
    "iso_checksum": "9e5fecc94b3925bededed0fdca1bd417",
    "iso_checksum_type": "md5",
    "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.3-server-amd64.iso",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",
    "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
    "vboxmanage": [
      [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}" ],
      [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}" ]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "only": ["virtualbox-iso"],
    "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
    "scripts": [
      "scripts/base.sh",
      "scripts/vagrant.sh",
      "scripts/virtualbox.sh",
      "scripts/cleanup.sh",
      "scripts/zerodisk.sh"
    ]
  },
  {
    "type": "chef-solo",
    "cookbook_paths": ["vendor/cookbooks"],
    "run_list": ["recipe[spinone]"],
    "override": {
      "amazon-ebs": {
        "json": {
          "ruby": {
            "deploy_user": "ubuntu",
            "deploy_group": "ubuntu",
            "rails_env": "production"
          },
          "phantomjs": {
            "version": "1.9.7",
            "base_url": "https://bitbucket.org/ariya/phantomjs/downloads"
          }
        }
      },
      "virtualbox-iso": {
        "json": {
          "ruby": {
            "deploy_user": "vagrant",
            "deploy_group": "vagrant",
            "rails_env": "development"
          },
          "phantomjs": {
            "version": "1.9.7",
            "base_url": "https://bitbucket.org/ariya/phantomjs/downloads"
          }
        }
      }
    }
  }],
  "post-processors": [{
    "type": "atlas",
    "artifact": "datacite/spinone",
    "artifact_type": "amazon.ami",
    "token": "{{user `atlas_token`}}",
    "metadata": {
      "created_at": "{{timestamp}}"
    }
  },
  {
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "only": ["virtualbox-iso"],
    "output": "spinone-virtualbox.box"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "2",
    "disk_size": "40000",
    "headless": "false",
    "memory": "2048",
    "mirror": "http://releases.ubuntu.com",
    "version": "0.1",
    "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "region": "{{env `AWS_REGION`}}",
    "source_ami": "{{env `AWS_SOURCE_AMI`}}",
    "instance_type": "{{env `AWS_INSTANCE_TYPE`}}",
    "atlas_token": "{{env `ATLAS_TOKEN`}}"
  },
  "push": {
    "name": "datacite/spinone",
    "vcs": true
  }
}
